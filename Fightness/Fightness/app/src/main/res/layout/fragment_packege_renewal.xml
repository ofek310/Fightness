<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/corners_bg"
    tools:context=".PackegeRenewalFragment">

    <LinearLayout
        android:layout_width="350dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="27dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="@string/package_renewal"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            app:startIconTint="@color/red"
            android:layout_marginEnd="20dp"
            android:hint="@string/email_trainee"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias=".1"
            app:layout_constraintWidth_percent=".8"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.MaterialComponents.AutoCompleteTextView">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_package"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            app:startIconTint="@color/red"
            android:layout_marginEnd="20dp"
            android:hint="@string/date"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias=".1"
            app:layout_constraintWidth_percent=".8"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.MaterialComponents.AutoCompleteTextView">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/date_package"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            app:startIconTint="@color/red"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:layout_height="50dp">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/spiner"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_alignParentStart="true"
                app:startIconTint="@color/red"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:theme="@style/ThemeOverlay.MaterialComponents.AutoCompleteTextView"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/spinner_amounttraining"
                android:layout_width="325dp"
                android:layout_alignBaseline="@id/spiner"
                android:layout_alignStart="@id/spiner"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:layout_height="40dp" />

        </RelativeLayout>

