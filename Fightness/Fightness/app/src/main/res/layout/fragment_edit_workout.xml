<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@drawable/corners_bg"
    tools:context=".EditWorkoutFragment">
    <LinearLayout
        android:layout_width="350dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="27dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="@string/new_train"/>

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            app:startIconTint="@color/red"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:layout_height="50dp">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/spiner"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_alignParentStart="true"
                app:startIconTint="@color/red"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:theme="@style/ThemeOverlay.MaterialComponents.AutoCompleteTextView"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/spiner_name_workout"
                android:layout_width="325dp"
                android:layout_alignBaseline="@id/spiner_name_workout"
                android:layout_alignStart="@id/spiner"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:layout_height="40dp" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativ"
            android:layout_width="match_parent"
            app:startIconTint="@color/red"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:layout_height="50dp">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/spiner2"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_alignParentStart="true"
                app:startIconTint="@color/red"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:theme="@style/ThemeOverlay.MaterialComponents.AutoCompleteTextView"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/trainer_spiner"
                android:layout_width="325dp"
                android:layout_alignBaseline="@id/trainer_spiner"
                android:layout_alignStart="@id/spiner2"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:layout_height="40dp" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relati"
            android:layout_width="match_parent"
            app:startIconTint="@color/red"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:layout_height="50dp">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/spiner3"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_alignParentStart="true"
                app:startIconTint="@color/red"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:theme="@style/ThemeOverlay.MaterialComponents.AutoCompleteTextView"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/hour_spiner"
                android:layout_width="325dp"
                android:layout_alignBaseline="@id/hour_spiner"
                android:layout_alignStart="@id/spiner3"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:layout_height="40dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relat"
            android:layout_width="match_parent"
            app:startIconTint="@color/red"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:layout_height="50dp">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/spiner4"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_alignParentStart="true"
                app:startIconTint="@color/red"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:theme="@style/ThemeOverlay.MaterialComponents.AutoCompleteTextView"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/parti_spiner"
                android:layout_width="325dp"
                android:layout_alignBaseline="@id/parti_spiner"
                android:layout_alignStart="@id/spiner4"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:layout_height="40dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rela"
            android:layout_width="match_parent"
            app:startIconTint="@color/red"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:layout_height="50dp">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/spiner5"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_alignParentStart="true"
                app:startIconTint="@color/red"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:theme="@style/ThemeOverlay.MaterialComponents.AutoCompleteTextView"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/sub_spiner"
                android:layout_width="325dp"
                android:layout_alignBaseline="@id/sub_spiner"
                android:layout_alignStart="@id/spiner5"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:layout_height="40dp" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_save_edit"
            android:layout_width="200dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center|bottom"
            android:layout_height="35dp"
            android:background="@drawable/button_bg"
            android:text="@string/save"/>
    </LinearLayout>

</LinearLayout>